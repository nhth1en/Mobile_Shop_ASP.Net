@model Account
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login</title>
    <link href="~/Admin/css/Login/IndexCSS.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        <h2>Admin Login</h2>
        <form asp-action="Index" method="POST">
            @if (ViewBag.Error != null)
            {
                <span style="color: red; display: block; margin-bottom: 10px;">@ViewBag.Error</span>
            }
            <div class="input-group">
                <label>Email</label>
                <input asp-for="Account_Email" type="email">
                <span asp-validation-for="Account_Email" style="color: red; display: block; margin-top: 5px;"></span>
            </div>
            <div class="input-group">
                <label>Mật khẩu</label>
                <input asp-for="Account_Password" type="password">
                <span asp-validation-for="Account_Password" style="color: red; display: block; margin-top: 5px;"></span>
            </div>
            <button type="submit">Đăng nhập</button>
        </form>
    </div>
</body>
</html>


