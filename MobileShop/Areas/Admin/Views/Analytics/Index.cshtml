
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Admin/css/Analytics/IndexCSS.css" rel="stylesheet" />
<div class="wrapper-content">
    <h2>THỐNG KÊ</h2>
    <div class="box">
        <div class="left">
            <h3>TỔNG SỐ SẢN PHẨM</h3>
            <p>@Model.TotalProducts</p>
        </div>
        <div class="right">
            <h3>TỔNG SỐ SẢN PHẨM ĐÃ BÁN</h3>
            <p>@Model.TotalProductsSold</p>
        </div>
    </div>
    <div class="box">
        <div class="left">
            <h3>TỔNG SÔ LOẠI SẢN PHẨM</h3>
            <p>@Model.TotalCategories</p>
        </div>
        <div class="right">
            <h3>TỔNG SỐ ĐƠN HÀNG CHƯA HOÀN THÀNH</h3>
            <p>@Model.TotalOrderIncomplete</p>
        </div>
    </div>
</div>






